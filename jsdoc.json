{
  "source": {
    "include": [
      "./lib/",
      "./README.md"
    ]
  },
  "opts": {
    "recurse": true,
    "pedantic": true,
    "tutorials": "tutorials"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "default": {
      "outputSourceFiles": true
    },
    "linenums": true
  },
  "markdown": {
    "parser": "gfm"
  }
}
